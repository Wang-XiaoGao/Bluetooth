<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="wxg.otdr.MainActivity$PlaceholderFragment">

    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ConfigBTLayout"
        android:background="@color/GrayWhite"
        android:clickable="true"
        android:longClickable="true"
        android:onClick="OpenBluetoothSettings">


        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageViewBT"
            android:background="@drawable/bluetooth56_gray"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            android:onClick="OpenBluetoothSettings"
            />

        <TextView
            android:id="@+id/id_MakeSure_Connection"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Bluetooth_Title"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/imageViewBT"
            android:layout_marginLeft="10dp"
            android:layout_toEndOf="@+id/imageViewBT" />
    </RelativeLayout>

    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1"
        android:id="@+id/id_Battery_Frame"
        android:layout_below="@+id/ConfigBTLayout"
        android:layout_marginTop="5dp"
        android:layout_centerHorizontal="true"
        android:background="@color/GrayWhite"
        android:onClick="QueryBattery">

            <ImageButton
                android:id="@+id/id_Battery_Image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/battery_56px_gray"
                android:layout_alignParentLeft="true"

                android:layout_centerVertical="true" />

            <TextView
                android:id="@+id/id_Battery_Chinese"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/Battery_Remain"
                android:layout_toRightOf="@id/id_Battery_Image"
                android:textStyle="bold"
                android:textSize="20sp"
                android:layout_marginLeft="20dp"

                android:layout_gravity="center_vertical"
                android:layout_centerVertical="true"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/id_Battery_Remain_Value"
                android:text="100"
                android:textColorHighlight="@color/colorPrimaryDark"
                android:textStyle="bold"
                android:textSize="20sp"
                android:autoLink="all"

                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/id_Battery_Chinese"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="%"
                android:textStyle="bold"
                android:textSize="20sp"

                android:layout_toRightOf="@id/id_Battery_Remain_Value"
                android:layout_centerVertical="true" />

    </RelativeLayout>


    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1"
        android:id="@+id/id_Status_Frame"
        android:layout_below="@id/id_Battery_Frame"
        android:layout_marginTop="5dp"
        android:layout_centerHorizontal="true"
        android:background="@color/GrayWhite"
        android:onClick="StartSelfCheck">

            <ImageButton
                android:id="@+id/id_SelfCheck_Image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/devicecheck56gray"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="10dp"
                android:layout_centerVertical="true"
                android:onClick="StartSelfCheck"/>








            <TextView
                android:id="@+id/id_MaterialNum_Chinese"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="手环编号："
                android:textStyle="bold"
                android:textSize="20sp"

                android:layout_gravity="center_vertical"
                android:layout_toRightOf="@id/id_SelfCheck_Image"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="10dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/id_MaterialNum_Value"
                android:text="100"
                android:textSize="20sp"

                android:layout_toRightOf="@id/id_MaterialNum_Chinese"
                android:layout_alignBottom="@id/id_MaterialNum_Chinese"
                />


            <TextView
                android:id="@+id/id_Voltage_Chinese"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="手环电压："
                android:textStyle="bold"
                android:textSize="20sp"

                android:layout_gravity="center_vertical"
                android:layout_toRightOf="@id/id_SelfCheck_Image"
                android:layout_marginLeft="10dp"
                android:layout_below="@id/id_MaterialNum_Chinese"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/id_Voltage_Value"
                android:text="100"
                android:textSize="20sp"
                android:layout_toRightOf="@id/id_Voltage_Chinese"
                android:layout_alignBottom="@id/id_Voltage_Chinese"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/id_Voltage_Percent"
                android:text="%"
                android:textStyle="bold"
                android:textSize="20sp"
                android:layout_toRightOf="@+id/id_Voltage_Value"
                android:layout_alignBottom="@id/id_Voltage_Chinese"/>






            <TextView
                android:id="@+id/id_Pressure_Chinese"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="压力值："
                android:textStyle="bold"
                android:textSize="20sp"
                android:layout_marginLeft="10dp"
                android:layout_gravity="center_vertical"
                android:layout_toRightOf="@id/id_SelfCheck_Image"
                android:layout_alignRight="@id/id_Voltage_Chinese"
                android:layout_below="@id/id_Voltage_Chinese"/>/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/id_Pressure_Value"
                android:text="100"
                android:textSize="20sp"
                android:layout_toRightOf="@id/id_Pressure_Chinese"
                android:layout_alignBottom="@id/id_Pressure_Chinese"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/id_Pressure_Percent"
                android:text="m"
                android:textStyle="bold"
                android:textSize="20sp"
                android:layout_toRightOf="@+id/id_Pressure_Value"
                android:layout_alignBottom="@id/id_Pressure_Chinese"/>

        </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Log info:"
        android:id="@+id/id_DebugText_View"
        android:layout_below="@+id/id_Status_Frame"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp"
        android:inputType="textMultiLine"
        android:maxLines="3"
        android:layout_alignParentEnd="true" />


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/BTStatusLayout"
        android:textSize="20sp"
        android:background="@color/GrayWhite"
        android:layout_below="@+id/id_DebugText_View"
        android:layout_alignParentStart="true"
        android:layout_marginTop="8dp"
        android:layout_alignEnd="@+id/id_DebugText_View">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/BT_Status"
            android:id="@+id/id_BTStatus_TextView"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:textSize="20sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Send_Times"
            android:id="@+id/id_SendTimes_textView"
            android:layout_below="@+id/id_BTStatus_TextView"
            android:layout_alignParentStart="true"
            android:textSize="20sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="01"
            android:id="@+id/id_SendTime_Nub"
            android:layout_below="@+id/id_BTStatus_TextView"
            android:layout_toEndOf="@+id/id_SendTimes_textView"
            android:textSize="20sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Send_Time"
            android:id="@+id/id_Time_textView"
            android:layout_below="@+id/id_BTStatus_TextView"
            android:layout_toEndOf="@+id/id_BTStatus_TextView"
            android:layout_marginStart="16dp"
            android:textSize="20sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0000"
            android:id="@+id/id_SendTime_0"
            android:layout_below="@id/id_SendTimes_textView"
            android:layout_alignParentStart="true"
            android:layout_marginTop="3dp"
            android:textSize="20sp"
            android:editable="false"

            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0001"
            android:id="@+id/id_SendTime_1"
            android:layout_below="@id/id_SendTimes_textView"
            android:layout_toEndOf="@id/id_SendTime_0"
            android:layout_marginStart="10dp"
            android:layout_marginTop="3dp"
            android:textSize="20sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0002"
            android:id="@+id/id_SendTime_2"
            android:layout_below="@id/id_SendTimes_textView"
            android:layout_toEndOf="@id/id_SendTime_1"
            android:layout_marginStart="10dp"
            android:layout_marginTop="3dp"
            android:textSize="20sp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0003"
            android:id="@+id/id_SendTime_3"
            android:layout_below="@id/id_SendTimes_textView"
            android:layout_toEndOf="@id/id_SendTime_2"
            android:layout_marginStart="10dp"
            android:layout_marginTop="3dp"
            android:textSize="20sp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0004"
            android:id="@+id/id_SendTime_4"
            android:layout_below="@id/id_SendTimes_textView"
            android:layout_toEndOf="@id/id_SendTime_3"
            android:layout_marginStart="10dp"
            android:layout_marginTop="3dp"
            android:textSize="20sp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0005"
            android:id="@+id/id_SendTime_5"
            android:layout_below="@id/id_SendTime_0"
            android:layout_alignParentStart="true"
            android:layout_marginTop="3dp"
            android:textSize="20sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0006"
            android:id="@+id/id_SendTime_6"
            android:layout_below="@id/id_SendTime_0"
            android:layout_toEndOf="@id/id_SendTime_5"
            android:layout_marginStart="10dp"
            android:layout_marginTop="3dp"
            android:textSize="20sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0007"
            android:id="@+id/id_SendTime_7"
            android:layout_below="@id/id_SendTime_0"
            android:layout_toEndOf="@id/id_SendTime_6"
            android:layout_marginStart="10dp"
            android:layout_marginTop="3dp"
            android:textSize="20sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0008"
            android:id="@+id/id_SendTime_8"
            android:layout_below="@id/id_SendTime_0"
            android:layout_toEndOf="@id/id_SendTime_7"
            android:layout_marginStart="10dp"
            android:layout_marginTop="3dp"
            android:textSize="20sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0009"
            android:id="@+id/id_SendTime_9"
            android:layout_below="@id/id_SendTime_0"
            android:layout_toEndOf="@id/id_SendTime_8"
            android:layout_marginStart="10dp"
            android:layout_marginTop="3dp"
            android:textSize="20sp"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/id_Time_Frame"

        android:layout_below="@id/BTStatusLayout"
        android:layout_alignParentStart="true"
        android:layout_marginTop="5dp"
        android:textSize="20sp"
        android:background="@color/GrayWhite">



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/id_Time_TextView"
            android:textSize="20sp"
            android:text="@string/Device_Time_Settings"
            android:layout_marginStart="10dp"
            android:layout_marginTop="3dp"
            />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/id_Edit_Date"
                android:textSize="20sp"
                android:text="2000-11-05"
                android:maxLength="10"
                android:layout_alignParentLeft="true"
                android:layout_below="@id/id_Time_TextView"
                android:focusable="false"
                />



            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/id_Edit_Time"
                android:textSize="20sp"
                android:maxLength="8"
                android:text="22:00:00"
                android:layout_marginStart="30dp"
                android:layout_toEndOf="@id/id_Edit_Date"
                android:layout_below="@id/id_Time_TextView"
                android:focusable="false"
                />




        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="读取"
            android:id="@+id/id_Read_Button"
            android:layout_alignParentTop="true"
            android:onClick="onButtonReadTime"
            android:layout_toStartOf="@+id/id_Set_Button" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="设置"
            android:id="@+id/id_Set_Button"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true" />

    </RelativeLayout>





</RelativeLayout>
